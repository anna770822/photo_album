<div class="container text-center">
  <%= image_tag @photo.file_location.url, size: "100%", class: "img-thumbnail" %>
</div>
<div class="container text-center content">
  <table class="table table-striped table-condensed">
    <tr>
      <td><%= @photo.title %></td>
    </tr>
    <tr>
      <td><%= @photo.date %></td>
    </tr>
    <tr>
      <td><%= simple_format(@photo.description) %></td>
    </tr>
  </table>

  <button class="btn btn-default"><%= link_to 'Back to index', photos_path %></button>
</div>